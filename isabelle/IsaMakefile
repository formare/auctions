
## targets

default: Auction
images: 
test: Auction

all: images test


## global settings

SRC = $(ISABELLE_HOME)/src
OUT = $(ISABELLE_OUTPUT)
LOG = $(OUT)/log

USEDIR = $(ISABELLE_TOOL) usedir -v true -i true -d pdf  ## -D generated


## Auction

Auction: $(LOG)/HOL-Auction.gz

$(LOG)/HOL-Auction.gz: ## Auction/ROOT.ML Auction/document/root.tex Auction/*.thy
	@$(USEDIR) HOL Auction


## clean

clean:
	@rm -f $(LOG)/HOL-Auction.gz
